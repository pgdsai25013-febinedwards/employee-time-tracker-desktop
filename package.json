{
    "name": "employee-timetracker-electron",
    "version": "1.0.0",
    "description": "Employee Time Tracker Desktop App with System-Wide Idle Detection",
    "main": "electron/main.js",
    "author": "Your Name",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
        "build": "vite build",
        "build:electron": "electron-builder",
        "package": "npm run build && electron-builder --win",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "@radix-ui/react-tabs": "^1.0.4",
        "@types/uuid": "^10.0.0",
        "clsx": "^2.0.0",
        "date-fns": "^2.30.0",
        "electron-store": "^8.2.0",
        "idb": "^8.0.3",
        "lucide-react": "^0.294.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "recharts": "^3.5.0",
        "tailwind-merge": "^2.1.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.42",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "typescript": "^5.3.2",
        "vite": "^5.0.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.yourcompany.employee-timetracker",
        "productName": "Employee Time Tracker",
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "build",
            "output": "release"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
